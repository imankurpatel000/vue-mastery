.switch
  position relative
  overflow hidden
  display inline-flex
  align-items center
  height 3rem
  margin 0rem auto 3rem auto
  border-radius 4rem
  box-shadow 0 1px 1px 0 rgba(0,0,0,0.3)
  font-weight 600
  background #ececec
  cursor pointer

  &:before
    content ''
    position absolute
    left -50%
    top -100%
    width 106%
    height 300%
    border-radius 50%
    box-shadow 1px 0px 1px 0 rgba(0,0,0,0.3)
    background $tertiary-color
    transition .25s

  .switch-item:nth-child(1)
    color #fff

  &.switch-active
    &:before
      left 53%
      box-shadow -1px 0px 1px 0 rgba(0,0,0,0.3)
    .switch-item:nth-child(2)
      color #fff

    .switch-item:nth-child(1)
      color $gray

.switch-item
  position relative
  display flex
  justify-content center
  align-items center
  height 100%
  padding 2rem
  color $gray
  z-index 2
  transition .1s
  